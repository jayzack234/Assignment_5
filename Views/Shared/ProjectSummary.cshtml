@model Project

<div class="row">
    <div class="ol-md-8 mx-auto card card-outline-primary m-2 p-3 container container-fluid border border-info">
        <h3>@Model.Title</h3>
        <p>Author: <b>@Model.FirstName @Model.LastName</b></p>
        <p>Publisher: <b>@Model.Publisher</b></p>
        <p>ISBN: <b>@Model.ISBN</b></p>
        <p>Classification/Category: <b>@Model.Classification, @Model.Category</b></p>
        <p>Number of Pages: <b>@Model.PageNumbers</b></p>
        <div class="alert alert-success" role="alert">
            <p>Price: <b>@Model.Price</b></p>
        </div>
        <form id="@Model.BookId" asp-page="/Donate" method="post">
            <!--Sets bookid for this input-->
            <input type="hidden" asp-for="BookId" />
            <!---->
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <!--Button for Cart-->
                <button type="submit" class="btn-success btn-sm" style="float:inherit">
                    Add to Cart
                </button>
            </span>
        </form>
    </div>
</div>